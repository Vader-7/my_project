{% extends "./base.html.twig" %}

{% block body %}
	<div class="w-4/5 m-auto text-center text-white">
		<div class="py-12 border-b border-gray-200">
			<h1 class="text-6xl pt-12 pb-8">
				Movies Review ({{ movies|length }})
			</h1>

			<span class="font-bold text-white italic">
				Created by Tyler
			</span>
		</div>
	</div>
	<div class="mx-auto w-4/5 my-8 text-white">
		<a href="/movies/create" class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition bg-gray-800 text-white hover:bg-white hover:text-gray-800">
			Create New movie
		</a>
	</div>
	<div
		class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 text-white">
		<!-- Review Item -->
		{% for movie in movies %}
			<div class="text-center pt-8 pb-12">
				<img src="{{ movie.imagePath }}" alt="" class="shadow-xl rounded-md"/>

				<h2 class="text-gray-200 font-bold text-3xl py-2">
					{{ movie.title }}
				</h2>

				<span class="text-white">
					By
					<span class="italic text-sm text-white">Tyler | 28.01.2022
					</span>

					<p class="text-base text-white pt-4 pb-10 leading-8 font-light">
						{{ movie.description }}
					</p>

					<a href="/movies/{{ movie.id }}" class="uppercase border border-gray-500 text-white text-lg py-4 px-12 rounded transition hover:bg-gray-800 hover:text-white">
						Keep Reading
					</a>
				</div>
			{% endfor %}
		</div>
	{% endblock %}
